generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @unique
  email     String  @unique
  image     String?
  firstName String
  lastName  String
  fullName  String
}

model Chat {
  id        String        @id @default(uuid())
  userId    String
  title     String
  messages  ChatMessage[]
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

model ChatMessage {
  id      String  @id @default(uuid())
  chatId  String
  content String?
  Chat Chat @relation(fields: [chatId], references: [id])
}
